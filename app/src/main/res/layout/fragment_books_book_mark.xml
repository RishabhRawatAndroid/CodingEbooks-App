<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bookmark_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BooksBookMarkFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bookmark_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/bookmark_image"
            android:layout_width="126dp"
            android:layout_height="139dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="119dp"
            android:src="@drawable/floppy" />

        <TextView
            android:id="@+id/bookmark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/abeezee"
            android:text="@string/no_bookmark"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:elevation="5dp"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:tooltipText="@string/delete_all"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_delete_white_24dp" />

</android.support.design.widget.CoordinatorLayout>