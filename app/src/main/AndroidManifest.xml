<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.rishabhrawat.codingebooks">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.WelcomeViewPagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:theme="@style/WithoutActionBarTheme"
            android:configChanges="orientation|screenSize"
            android:name=".activities.BottomNavigationActivity" />

        <receiver
            android:name=".broadcast_reciever.InternetChecker"
            android:enabled="true"
            android:exported="true">

            <!--<intent-filter>-->
                <!--&lt;!&ndash; Intent filters for broadcast receiver &ndash;&gt;-->
                <!--<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />-->
                <!--<action android:name="android.net.wifi.WIFI_STATE_CHANGED" />-->
                <!--<action android:name="android.net.wifi.STATE_CHANGE" />-->
            <!--</intent-filter>-->
        </receiver>
    </application>

</manifest>