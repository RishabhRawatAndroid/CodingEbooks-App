<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapps.rishabhrawat.codingebooks">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.myapps.rishabhrawat.codingebooks.SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8451532053051726~9189553565"/>

        <activity
            android:name="com.myapps.rishabhrawat.codingebooks.activities.WelcomeViewPagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:theme="@style/WithoutActionBarTheme"
            android:configChanges="orientation|screenSize"
            android:name="com.myapps.rishabhrawat.codingebooks.activities.BottomNavigationActivity" />
    </application>

</manifest>